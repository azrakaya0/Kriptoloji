@model Kriptoloji.Models.AesModel

<div class="container mt-5 p-4 rounded" style="background:#2d3436; color:#00ffff;">
    <h2 class="mb-4">AES Şifreleme - Azra Kaya</h2>

    <form asp-action="Encrypt" method="post">
        <div class="form-group mb-3">
            <label>Metin:</label>
            <input type="text" name="PlainText" class="form-control" value="@Model.PlainText" />
        </div>
        <div class="form-group mb-3">
            <label>Şifre:</label>
            <input type="text" name="Key" class="form-control" value="@Model.Key" />
        </div>
        <button type="submit" class="btn btn-info">Şifrele</button>
        @if (!string.IsNullOrEmpty(Model.EncryptedText))
        {
            <div class="mt-3">
                <label>Şifrelenmiş Metin:</label>
                <textarea class="form-control">@Model.EncryptedText</textarea>
            </div>
        }
    </form>

    <hr />

    <form asp-action="Decrypt" method="post">
        <div class="form-group mb-3">
            <label>Şifreli Metin:</label>
            <input type="text" name="EncryptedText" class="form-control" value="@Model.EncryptedText" />
        </div>
        <div class="form-group mb-3">
            <label>Şifre:</label>
            <input type="text" name="Key" class="form-control" value="@Model.Key" />
        </div>
        <button type="submit" class="btn btn-warning">Çöz</button>
        @if (!string.IsNullOrEmpty(Model.DecryptedText))
        {
            <div class="mt-3">
                <label>Çözülmüş Metin:</label>
                <textarea class="form-control">@Model.DecryptedText</textarea>
            </div>
        }
    </form>
</div>
